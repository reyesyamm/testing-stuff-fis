<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swyam.fisiomer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_fisiomer_blue_background"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewPatientActivity"
            android:label="@string/title_activity_new_patient"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DrawBodyActivity"
            android:label="@string/title_activity_draw_body"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PatientsFoundActivity"
            android:label="@string/title_activity_patients_found"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PatientActivity"
            android:label="@string/title_activity_patient"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewTreatmentActivity"
            android:label="@string/title_activity_new_treatment"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:screenOrientation="portrait"
            android:name=".FunctionalTreatmentActivity"
            android:label="@string/title_activity_functional_treatment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:screenOrientation="portrait"
            android:name=".PreventTreatmentActivity"
            android:label="@string/title_activity_prevent_treatment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:screenOrientation="portrait"
            android:name=".AnalgesicTreatmentActivity"
            android:label="@string/title_activity_analgesic_treatment"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>