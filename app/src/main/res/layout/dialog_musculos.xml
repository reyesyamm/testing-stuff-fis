<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="2dp"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_subtitle"
        android:textColor="@color/colorPrimaryText"
        android:textAlignment="center"
        android:padding="4dp"
        android:text="Selecciona un músculo para la terapia"/>


    <Button
        android:id="@+id/btn_cerrar_dialogo_musculos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:text="Cancelar"
        android:visibility="gone"
        android:textSize="@dimen/font_size_subtitle"
        android:textColor="@color/colorTextButton"
        android:textAllCaps="false"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/back_text_search"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/txt_busqueda_rapida_musculo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Filtrar Búsqueda"
            android:imeOptions="actionSearch"
            android:inputType="textCapCharacters"
            android:lines="1"
            android:maxLength="50"
            android:maxLines="1"
            android:textAlignment="center"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/txtview_back"
            android:textSize="@dimen/font_size_paragraph" />

        <ImageButton
            android:id="@+id/btn_filtrar_busqueda_musculo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/mybutton"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_search_white_48dp" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_musculos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:scrollbars="vertical"
        >

    </ListView>

</LinearLayout>