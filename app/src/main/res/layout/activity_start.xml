<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:id="@+id/ll_start"

    tools:context="com.swyam.fisiomer.StartActivity">

    <ImageView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:src="@drawable/logotransparente"
        android:padding="20dp"
         />

    <ProgressBar
        android:id="@+id/progressbar_verificando_conexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:indeterminate="true"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#000000"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:id="@+id/contendor_error_conexion"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="Error al verificar la conexiÃ³n al servidor.\nToca la pantalla para reintentar"
            android:textSize="@dimen/font_size_subtitle"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"
            />

        <Button
            android:id="@+id/btn_configurar_conexion"
            android:layout_width="wrap_content"
            android:text="Configurar"
            android:textAllCaps="false"
            android:textSize="@dimen/font_size_title"
            android:textColor="#ffff00"
            android:textStyle="bold"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>
