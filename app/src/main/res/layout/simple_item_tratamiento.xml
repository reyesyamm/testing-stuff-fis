<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_tratamiento"
    cardview:cardCornerRadius="2dp"
    android:background="#ffffff"
    cardview:cardElevation="3dp"
    cardview:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/contenedor_detalles_tratamiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nombre_terapeuta_tratamiento"
            android:textSize="@dimen/font_size_subtitle"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terapeua: Nombre"
            />

        <TextView
            android:id="@+id/tv_fecha_tratamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_subtitle"
            android:textColor="@color/colorPrimaryText"
            android:text="Fecha"
            />

        <TextView
            android:id="@+id/tv_resumen_tratamiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_paragraph"
            android:text="Breve resumen del tratamiento que se realizó al paciente en su última visita. Para visualizar el resumen completo el terapeuta debe oprimir este elemento."
            android:textColor="@color/colorSecondaryText"
            android:padding="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_subtitle"
                    android:text="Al iniciar Tratamiento"
                    android:textColor="@color/colorPrimaryText"
                    />

                <ImageView
                    android:id="@+id/image_estado_paciente_inicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:src="@drawable/cara1" />
            </LinearLayout>


            <LinearLayout
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_subtitle"
                    android:text="Al terminar Tratamiento"
                    android:textColor="@color/colorPrimaryText"
                    />

                <ImageView
                    android:id="@+id/image_estado_paciente_fin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cara1"
                    android:scaleType="fitStart"
                    />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_footer"
            android:textColor="@color/colorSecondaryText"
            android:padding="3dp"
            android:text="Selecciona este elemento para mostrar tratamiento detallado."
            />



    </LinearLayout>


</android.support.v7.widget.CardView>